# ===== Headers de Segurança =====

/*
  # Previne MIME sniffing (já estava presente)
  X-Content-Type-Options: nosniff
  
  # Previne clickjacking (seu site não pode ser carregado em iframes de outros sites)
  X-Frame-Options: SAMEORIGIN
  
  # Proteção contra XSS (legado, mas ainda útil para navegadores antigos)
  X-XSS-Protection: 1; mode=block
  
  # Controla informações de referrer (privacidade)
  Referrer-Policy: strict-origin-when-cross-origin
  
  # Controla APIs do navegador (desabilita recursos desnecessários)
  Permissions-Policy: geolocation=(), microphone=(), camera=(), payment=(), usb=(), magnetometer=(), gyroscope=()
  
  # Content Security Policy (CRÍTICO - previne XSS e injeção de scripts)
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' https://www.googletagmanager.com https://www.clarity.ms; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; frame-src https://www.youtube-nocookie.com; connect-src 'self' https://www.googletagmanager.com https://www.clarity.ms https://www.google-analytics.com; object-src 'none'; base-uri 'self'; form-action 'self' https://pay.kiwify.com.br


# ===== Cache Control =====

